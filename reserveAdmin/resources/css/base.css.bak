/* 기본 폰트 설정 */
* {padding:0px;margin:0px;}
html, body {height:100%;}

BODY {
	text-align:left;
	font-size:12px;
	color:#737373;
	line-height:20px;
	/*font-family:"맑은 고딕", "돋움", "굴림";*/
	font-family:"돋움", "굴림";
	height:100%;
}


/* 기본 링크 설정 */            
A:link 		{color: #737373; text-decoration: none;}
A:visited   {color: #737373; text-decoration: none;}
A:hover     {color: #9c0d32; text-decoration: none;}
A:active    {color: #9c0d32; text-decoration: none;}


/* H1~H6 태그에 대한 기본설정  타이틀 쪽에서 사용 */
H1, H2, H3, H4, H5, H6 { 
/*	background-color: #CCCCCC; */
	padding:5px;
}

H6 {font-size: 120%;}
H5 {font-size: 140%;}
H4 {font-size: 150%;}
H3 {font-size: 160%;}
H2 {font-size: 180%;}
H1 {font-size: 200%;}

/* 테이블에 대한 기본설정 */                       
TABLE {border:none;border-collapse:collapse;font-size:12px;}

CAPTION {display:none;}

/*TH, TD {border:1px solid #E9E9E9;}*/
/*TH, TD {border:1px solid #EDEDED;}
TH {background: #EFEFEF;}*/
TH, TD {border:1px solid #e3e3e3;}
TH {background: #EFEFEF;}


/* 이미지 태그에 대한 기본설정 */                 
IMG, OBJECT, EMBED {border:0px;vertical-align: middle;}

/* 폼태그(입력박스 등)에 대한 기본 설정 */                 
FORM {display : inline; padding:0px;}

INPUT {
	border:0;

	}

TEXTAREA       {
	border-color:#dddddd; 
	border-width:1px; 
	border-style:solid; 
	overflow:auto;
}

.classTextarea {width: 100%; height: 100%; border: none; resize: none;}

@media print{
    @page {size : auto; margin : 10mm}
    .printNone {display: none;}
}

